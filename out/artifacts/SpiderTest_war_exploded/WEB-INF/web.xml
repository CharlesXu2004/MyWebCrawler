<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>UrlCrawlServlet</servlet-name>
        <servlet-class>org.example.UrlCrawlServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UrlCrawlServlet</servlet-name>
        <url-pattern>/UrlCrawl</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreatePdfServlet</servlet-name>
        <servlet-class>org.example.CreatePdfServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreatePdfServlet</servlet-name>
        <url-pattern>/CreatePdf</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateWordServlet</servlet-name>
        <servlet-class>org.example.CreateWordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateWordServlet</servlet-name>
        <url-pattern>/CreateWord</url-pattern>
    </servlet-mapping>
</web-app>